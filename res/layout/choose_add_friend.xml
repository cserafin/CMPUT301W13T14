<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bChooseSReturn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Return" />

    <Button
        android:id="@+id/bChooseSManual"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bChooseSSearch"
        android:layout_marginTop="76dp"
        android:text="Enter Manually" />

    <Button
        android:id="@+id/bChooseSSearch"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bChooseSReturn"
        android:layout_marginTop="76dp"
        android:text="Search for User" />

</RelativeLayout>