<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bChooseSendReturn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="clickHandler"
        android:text="Return" />

    <Button
        android:id="@+id/bChooseSendManual"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bChooseSendSearch"
        android:layout_marginTop="76dp"
        android:onClick="clickHandler"
        android:text="Send via Email" />

    <Button
        android:id="@+id/bChooseSendSearch"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bChooseSendReturn"
        android:layout_marginTop="76dp"
        android:onClick="clickHandler"
        android:text="Send to Friend" />

</RelativeLayout>