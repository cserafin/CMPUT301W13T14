<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.oneclick_cookbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:name="ca.ualberta.cs.oneclick_cookbook.GlobalApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.cs.oneclick_cookbook.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.oneclick_cookbook.CreateRecipeActivity"
            android:label="@string/title_activity_create_recipe" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.oneclick_cookbook.ViewRecipesActivity"
            android:label="@string/title_activity_view_recipes" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.oneclick_cookbook.AddIngredientsActivity"
            android:label="@string/title_activity_add_ingredients" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.oneclick_cookbook.ManagePantryActivity"
            android:label="@string/title_activity_manage_pantry" >
        </activity>
    </application>

</manifest>